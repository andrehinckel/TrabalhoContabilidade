
@{
    ViewBag.Title = "Index";
}

<h3>Lista de Clientes</h3>

<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-right" href="@Url.Action("Cadasto")">Novo Cadastro</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Cliente cliente in ViewBag.Clientes)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Contabilidade.Nome</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Cpf</td>
                <td>
                    <a href="@Url.Action("Editar", new {id = cliente.Id})" class="btn btn-primary"><i class="fas fa-pe"> Editar</i></a>

                    <a href="@Url.Action("Apagar", new {id = cliente.Id})" class="btn btn-danger"><i class="fas fa-trash"> Apagar</i>
                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>


