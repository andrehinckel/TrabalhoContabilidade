
@{
    ViewBag.Title = "Index";
}



<h3 class="titulo">Lista de Clientes</h3>

<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-right mb-3" href="@Url.Action("Cadastro")"><i class="fa fa-plus"></i> Novo Cliente</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered table-responsive">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome da Contabilidade</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Cliente cliente in ViewBag.Clientes)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Contabilidade.Nome</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Cpf</td>
                <td>
                    <a href="@Url.Action("Editar", new {id = cliente.Id})" class="btn btn-info"><i class="fas fa-pen"></i> Editar</a>

                    <a href="@Url.Action("Apagar", new {id = cliente.Id})" class="btn btn-danger"><i class="fas fa-trash"> </i> Apagar</a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome da Contabilidade</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>


