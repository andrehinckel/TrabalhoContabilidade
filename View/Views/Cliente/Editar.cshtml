
@{
    ViewBag.Title = "Editar";
}

<h3 class="titulo">Editar Clientes</h3>

<form action="@Url.Action("Update")" method="post" id="needs-validation" novalidate>
    <input type="hidden" name="id" value="@ViewBag.Cliente.Id" required/>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-contabilidade">Contabilidade</label>
                <select id="campo-contabilidade" name="idContabilidade" class="form-control" required>

                    @foreach (Model.Contabilidade contabilidade in ViewBag.Contabilidade)
                    {
                        if (contabilidade.Id == ViewBag.Cliente.IdContabilidade)
                        {
                            <option value="@contabilidade.Id" selected="selected">@contabilidade.Nome</option>
                        }
                        else
                        {
                            <option value="@contabilidade.Id">@contabilidade.Nome</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" id="campo-nome" name="nome" value="@ViewBag.Cliente.Nome" class="form-control" required />
                <div class="invalid-feedback">Digite um Nome Válido</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-cpf">CPF</label>
                <input type="text" id="campo-cpf" name="cpf" value="@ViewBag.Cliente.Cpf" class="form-control" required />
                <div class="invalid-feedback">Digite um Cpf Válido</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-success float-right" typeof="submit"><i class="fas fa-save"> Salvar</i></button>
     
        </div>

    </div>
</form>

