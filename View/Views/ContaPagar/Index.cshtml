
@{
    ViewBag.Title = "Index";
}

<div class="d-flex mr-3" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-dark border-right" id="sidebar-wrapper">
        <div class="sidebar-heading text-white border-bottom">Dashboard </div>
        <div class="list-group list-group-flush list-group-item-dark bg-dark">
            <div class="border-bottom">
                <nav class="navbar navbar-expand-lg navbar-light bg-dark float-left">
                    <ul class="navbar-nav ml-auto mt-auto mt-lg-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Contabilidades
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenu">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Usuario")">Usuarios</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Cliente")">Clientes</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Contabilidade")">Nova Contabilidade</a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="border-bottom">

                <nav class="navbar navbar-expand-lg navbar-light bg-dark float-left">
                    <ul class="navbar-nav ml-auto mt-auto mt-lg-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Categorias
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenu">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "ContaPagar")">Conta Pagar</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "ContaReceber")">Conta Receber</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Categoria")">Nova Categoria</a></li>
                            </ul>
                        </li>
                    </ul>

                </nav>
            </div>

            <div class="border-bottom">
                <nav class="navbar navbar-expand-lg navbar-light bg-dark float-left">
                    <ul class="navbar-nav ml-auto mt-auto mt-lg-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Compras
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenu">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "CartaoCredito")">Cartões de Crédito</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Compra")">Nova compra</a></li>
                            </ul>
                        </li>
                    </ul>

                </nav>
            </div>
        </div>
    </div>

    <!-- Page Content -->
    <div class="" id="page-content-wrapper">

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <button class="btn btn-sm btn-outline-warning" id="menu-toggle">
                <i class="fas fa-hamburger"></i>
            </button>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>

            <div class="text-white ml-3">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "Principal")">Gestão de Contabilidades<span class="sr-only">(current)</span></a>
                    </li>
                </ul>

            </div>
        </nav>
        <div class="container-fluid">
            <h3>Contas Pagar</h3>

            <div class="row">
                <div class="col-12">
                    <a href="@Url.Action("Cadastro")" class="btn btn-primary float-right mb-3">Nova Conta a Pagar</a>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Código</th>
                                <th>Nome</th>
                                <th>Nome do Cliente</th>
                                <th>Cpf do Cliente</th>
                                <th>Data Vencimento</th>
                                <th>Data Pagamento</th>
                                <th>Valor</th>
                                <th>Ação</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (Model.ContaPagar contaPagar in ViewBag.ContasPagar)
                            {
                                <tr>
                                    <td>@contaPagar.Id</td>
                                    <td>@contaPagar.Nome</td>
                                    <td>@contaPagar.Cliente.Nome</td>
                                    <td>@contaPagar.Cliente.Cpf</td>
                                    <td>@contaPagar.DataVencimento</td>
                                    <td>@contaPagar.DataPagamento</td>
                                    <td>@contaPagar.Valor</td>
                                    <td>
                                        <a href="@Url.Action("Editar", new { Id = contaPagar.Id })" class="btn btn-outline-info"><i class="fas fa-pen"></i> Update</a>
                                        <a href="@Url.Action("Delete", new { Id = contaPagar.Id })" class="btn btn-outline-danger"> <i class="fas fa-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                        <tfoot class="thead-dark">
                            <tr>
                                <th>Código</th>
                                <th>Nome</th>
                                <th>Nome do Cliente</th>
                                <th>Cpf do Cliente</th>
                                <th>Data Vencimento</th>
                                <th>Data Pagamento</th>
                                <th>Valor</th>
                                <th>Ação</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <script>
            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
        </script>
    </div>
</div>


