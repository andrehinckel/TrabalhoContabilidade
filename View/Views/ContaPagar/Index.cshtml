
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")" class="btn btn-primary float-right mb-3">Nova Conta a Pagar</a>
    </div>
</div>

<div class="row">
    <div class="col-10 offset-1 table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Nome do Cliente</th>
                    <th>Cpf do Cliente</th>
                    <th>Data Vencimento</th>
                    <th>Data Pagamento</th>
                    <th>Valor</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                @foreach (Model.ContaPagar contaPagar in ViewBag.ContasPagar)
                {
                    <tr>
                        <td>@contaPagar.Id</td>
                        <td>@contaPagar.Nome</td>
                        <td>@contaPagar.Cliente.Nome</td>
                        <td>@contaPagar.Cliente.Cpf</td>
                        <td>@contaPagar.DataVencimento</td>
                        <td>@contaPagar.DataPagamento</td>
                        <td>@contaPagar.Valor</td>
                        <td>
                            <a href="@Url.Action("Editar", new { Id = contaPagar.Id })" class="btn btn-primary"><i class="fas fa-pen"></i> Update</a>
                            <a href="@Url.Action("Delete", new { Id = contaPagar.Id })" class="btn btn-danger"> <i class="fas fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Nome do Cliente</th>
                    <th>Cpf do Cliente</th>
                    <th>Data Vencimento</th>
                    <th>Data Pagamento</th>
                    <th>Valor</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

