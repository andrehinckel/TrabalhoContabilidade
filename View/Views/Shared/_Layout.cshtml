<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-all.min.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/css/simple-sidebar.css" rel="stylesheet" />
    <link href="~/Content/css/Site.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/Content/css/principal.css"/>

    <link rel="icon" href="~/Content/notebook-with-dollars-symbol.ico"/>


</head>

<body>


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/mask.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://github.com/igorescobar/jQuery-Mask-Plugin/blob/master/src/jquery.mask.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>


    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-dark border-right" id="sidebar-wrapper">
            <div class="sidebar-heading text-white border-bottom">Dashboard </div>
            <div class="list-group list-group-flush list-group-item-dark bg-dark">
                <div class="border-bottom">
                    <nav class="navbar navbar-expand-lg navbar-light bg-dark float-left">
                        <ul class="navbar-nav ml-auto mt-auto mt-lg-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class=" fas fa-file-invoice-dollar fa-lg"></i>
                                    Contabilidades
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Usuario")">Usuarios</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Cliente")">Clientes</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Contabilidade")">Nova Contabilidade</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>

                <div class="border-bottom">

                    <nav class="navbar navbar-expand-lg navbar-light bg-dark float-left">
                        <ul class="navbar-nav ml-auto mt-auto mt-lg-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class=" fas fa-folder fa-lg"></i>
                                    Categorias
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "ContaPagar")">Conta Pagar</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "ContaReceber")">Conta Receber</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Categoria")">Nova Categoria</a></li>
                                </ul>
                            </li>
                        </ul>

                    </nav>
                </div>

                <div class="border-bottom">
                    <nav class="navbar navbar-expand-lg navbar-light bg-dark float-left">
                        <ul class="navbar-nav ml-auto mt-auto mt-lg-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-shopping-cart fa-lg"></i>
                                    Compras
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "CartaoCredito")">Cartões de Crédito</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Compra")">Nova compra</a></li>
                                </ul>
                            </li>
                        </ul>

                    </nav>
                </div>
            </div>
        </div>

        <!-- Page Content -->
        <div class="" id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <button class="btn btn-sm btn-outline-warning" id="menu-toggle">
                    <i class="fas fa-hamburger"></i>
                </button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>

                <div class="text-white ml-3">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("Index", "Principal")"><i class="fas fa-an"></i>Gestão de Contabilidades<span class="sr-only">(current)</span></a>
                        </li>
                    </ul>

                </div>
            </nav>
            <div class="container-fluid">

                @RenderBody()
            </div>
        </div>

        <script>
            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
            $(document).ready(function () {
                $(".cpf").mask("999.999.999-99");
            });
            $(document).ready(function () {
                $(".numerocardaocredito").mask("9999 9999 9999 9999");
            });
            $(document).ready(function () {
                $(".numerocvv").mask("999");
            });
        </script>

        <script type="text/javascript">
            (function () {
                'use strict';
                window.addEventListener('load', function () {
                    var form = document.getElementById('needs-validation');
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                }, false);
            })();
        </script>


    </div>

</body>

</html>
