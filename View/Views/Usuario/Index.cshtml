
@{
    ViewBag.Title = "Index";
}

<h3>Lista de Usuários</h3>
<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")" class="btn btn-primary float-right mb-3">Novo Usuário</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome da Contabilidade</th>
            <th>Login</th>
            <th>Senha</th>
            <th>Data Nascimento</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Usuario usuario in ViewBag.Usuarios)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Contabilidade.Nome</td>
                <td>@usuario.Login</td>
                <td>@usuario.Senha</td>
                <td>@usuario.DataNascimento</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = usuario.Id})" class="btn btn-outline-primary"><i class="fas fa-pen"></i> Update</a>

                    <a href="@Url.Action("Delete", new { id = usuario.Id})" class="btn btn-outline-danger"><i class="fas fa-pen"></i> Delete </a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome da Contabilidade</th>
            <th>Login</th>
            <th>Senha</th>
            <th>Data Nascimento</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>

