
@{
    ViewBag.Title = "Cadastro";
}

<h3 class="titulo">Cadastro de Novo Usuário</h3>
<form action="@Url.Action("Store")" method="post" id="needs-validation" novalidate>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-contabilidade">Contabilidade</label>
                <select id="campo-cliente" name="idContabilidade" class="form-control" required>
                    <option disabled="disabled" selected="selected">Selecione uma Contabilidade</option>
                    @foreach (Model.Contabilidade contabilidade in ViewBag.Contabilidades)
                    {
                        <option value="@contabilidade.Id">@contabilidade.Nome</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="-campo-login">Login</label>
                <input type="text" name="login" id="campo-login" class="form-control" required/>
                
                <div class="invalid-feedback"> Digite um Login Válido</div>


                <label for="campo-senha">Senha</label>
                <input type="password" name="senha" id="campo-senha" class="form-control" required/>
                
                <div class="invalid-feedback"> Digite uma Senha Válida</div>

                <label for="campo-data-nascimento">Data Nascimento</label>
                <input type="date" name="dataNascimento" id="campo-data-nascimento" class="form-control" required/>
                <
                <div class="invalid-feedback"> Digite uma Data de Nascimento</div>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-success float-right mt-3"><i class="fas fa-save"></i> Salvar</button>
  
        </div>
    </div>

</form>
