
@{
    ViewBag.Title = "Editar";
}

<h3>Editar Usuario</h3>

<form action="@Url.Action("Update")" method="post">
    <input type="hidden" name="id" value="@ViewBag.Usuario.Id" />

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-contabilidade">Contabilidades</label>
                <select id="campo-contabilidade" name="idContabilidade" class="form-control">
                    @foreach (Model.Contabilidade contabilidade in ViewBag.Contabilidades)
                    {
                        if (contabilidade.Id == ViewBag.Usuario.IdContabilidade)
                        {
                            <option value="@contabilidade.Id" selected="selected">@contabilidade.Nome</option>
                        }
                        else
                        {
                            <option value="@contabilidade.Id">@contabilidade.Nome</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-login">Login</label>
                <input type="text" name="login" id="campo-login" value="@ViewBag.Usuario.Login" class="form-control" />

                <label for="campo-senha">Senha</label>
                <input type="text" name="senha" id="campo-senha" value="@ViewBag.Usuario.Senha" class="form-control" />

                <label for="campo-data-nascimento">Data Nascimento</label>
                <input type="date" name="dataNascimento" value="@ViewBag.Usuario.DataNascimento.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-success float-right" type="submit">
                <i class="fas fa-save"></i> Salvar
            </button>
            <ul>
                <li class="btn"><a class="btn btn-warning mt-1" href="@Url.Action("Index", "Usuario")"><i class="fas fa-undo-alt"></i> Voltar</a></li>
            </ul>
        </div>
    </div>
</form>
