
@{
    ViewBag.Title = "Cadastro";
}

<h3>Cadastro de Compra</h3>

<script type="text/javascript">
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var form = document.getElementById('needs-validation');
            form.addEventListener('submit', function (event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        }, false);
    })();
</script>

<form action="@Url.Action("Store")" method="post" novalidate>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-cartao-credito">Cartão de Crédito</label>
                <select id="campo-cartao-credio" name="idCartaoCredito" class="form-control">
                    <option disabled="disabled" selected="selected">Selecione um cartão de crédito</option>
                    @foreach (Model.CartaoCredito cartaoCredito in ViewBag.CartoesCredito)
                    {
                        <option value="@cartaoCredito.Id">@cartaoCredito.Numero</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">

                <label for="campo-valor">Valor</label>
                <input type="text" name="valor" id="campo-valor" class="form-control" required />
                <div class="invalid-feedback">
                    Digite um Valor válido
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-data-compra">Data de Compra</label>
                <input type="date" name="dataCompra" id="campo-data-compra" class="form-control" required />
                <div class="invalid-feedback">
                    Selecione uma Data
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-success float-right"><i class="fas fa-save"></i> Salvar</button>
            <ul>
                <li class="btn"><a class="btn btn-warning mt-1" href="@Url.Action("Index", "Compra")"><i class="fas fa-undo-alt"></i> Voltar</a></li>
            </ul>
        </div>
    </div>
</form>



