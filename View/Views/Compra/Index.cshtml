
@{
    ViewBag.Title = "Index";
}



<h3 class="titulo">Compras</h3>

<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")" class="btn btn-primary float-right mb-3">Nova Compra</a>
    </div>
</div>

<div class="row">
    <div class="col-10 offset-1 table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Valor</th>
                    <th>Data de Compra</th>
                    <th>Número</th>
                    <th>CVV</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                @foreach (Model.Compra compra in ViewBag.Compras)
                {
                    <tr>
                        <td>@compra.Id</td>
                        <td>@compra.Valor</td>
                        <td>@compra.DataCompra</td>
                        <td>@compra.CartaoCredito.Numero</td>
                        <td>@compra.CartaoCredito.Cvv</td>
                        <td>
                            <a href="@Url.Action("Editar", new { Id = compra.Id})" class="btn btn-outline-info"><i class="fas fa-pen"></i> Editar</a>
                            <a href="@Url.Action("Apagar", new { Id = compra.Id})" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Valor</th>
                    <th>Data de Compra</th>
                    <th>Número</th>
                    <th>CVV</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>



