
@{
    ViewBag.Title = "Cadastro";
}

<h3>Cadastro de Categoria</h3>

<script type="text/javascript">
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var form = document.getElementById('needs-validation');
            form.addEventListener('submit', function (event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        }, false);
    })();
</script>


<form action="@Url.Action("Store")" method="post" novalidate>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input id="campo-nome" type="text" name="nome" class="form-control" required />
                <div class="invalid-feedback"> Difite um Nome válido</div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div>
                    <button class="btn btn-success float-right"><i class="fas fa-save"></i> Salvar</button>
                    <ul>
                        <li class="btn"><a class="btn btn-warning mt-1" href="@Url.Action("Index", "Usuario")"><i class="fas fa-undo-alt"></i> Voltar</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</form>

