
@{
    ViewBag.Title = "Index";
}



<h3 class="titulo">Categoria</h3>

<div class="row">
    <div class="col-12 mb-3 table responsive">
        <a class="btn btn-primary float-right" href="@Url.Action("Cadastro")"><i class="fa fa-plus"></i> Nova Categoria</a>
    </div>
</div>

<div class="row">
    <div class="col-10 offset-1 table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Model.Categoria categoria in ViewBag.Categorias)
                {
                    <tr>
                        <td>@categoria.Id</td>
                        <td>@categoria.Nome</td>
                        <td>
                            <a href="@Url.Action("Editar", new { Id = categoria.Id})" class="btn btn-info"><i class="fas fa-pen"></i> Editar</a>
                            <a href="@Url.Action("Apagar", new { Id = categoria.Id})" class="btn btn-danger"><i class="fas fa-trash"></i> Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>








