
@{
    ViewBag.Title = "Editar";
}

<h3>Editar</h3>

<form action="@Url.Action("Update")" method="post">
    <input type="hidden" name="id" value="@ViewBag.Categoria.Id" />

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" id="campo-nome" name="nome" value="@ViewBag.Categoria.Nome" class="form-control" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-success float-right" type="submit">
                <i class="fas fa-save"></i> Salvar
            </button>
            <ul>
                <li class="btn"><a class="btn btn-warning mt-1" href="@Url.Action("Index", "Usuario")"><i class="fas fa-undo-alt"></i> Voltar</a></li>
            </ul>
        </div>
    </div>

</form>

