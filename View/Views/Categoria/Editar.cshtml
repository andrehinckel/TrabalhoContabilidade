
@{
    ViewBag.Title = "Editar";
}

<h3 class="titulo">Editar Categoria</h3>

<form action="@Url.Action("Update")" method="post" id="needs-validation" novalidate>
    <input type="hidden" name="id" value="@ViewBag.Categoria.Id" />

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" id="campo-nome" name="nome" value="@ViewBag.Categoria.Nome" class="form-control" required/>
                <div class="invalid-feedback"> Digite um Nome válido</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-success float-right" type="submit">
                <i class="fas fa-save"></i> Salvar
            </button>

        </div>
    </div>

</form>

