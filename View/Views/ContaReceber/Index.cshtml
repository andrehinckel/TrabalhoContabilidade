
@{
    ViewBag.Title = "Index";
}


<h3 class="titulo">Contas Receber</h3>

<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")" class="btn btn-primary float-right mb-3">Nova Conta a Receber</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Nome do Cliente</th>
                    <th>Cpf do Cliente</th>
                    <th>Data Pagamento</th>
                    <th>Valor</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                @foreach (Model.ContaReceber contaReceber in ViewBag.ContasReceber)
                {
                    <tr>
                        <td>@contaReceber.Id</td>
                        <td>@contaReceber.Nome</td>
                        <td>@contaReceber.Cliente.Nome</td>
                        <td>@contaReceber.Cliente.Cpf</td>
                        <td>@contaReceber.DataPagamento</td>
                        <td>@contaReceber.Valor</td>
                        <td>
                            <a href="@Url.Action("Editar", new { Id = contaReceber.Id})" class="btn btn-outline-info"><i class="fas fa-pen"></i> Editar</a>
                            <a href="@Url.Action("Apagar", new { Id = contaReceber.Id})" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Nome do Cliente</th>
                    <th>Cpf do Cliente</th>
                    <th>Data Pagamento</th>
                    <th>Valor</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


