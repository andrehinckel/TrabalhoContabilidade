
@{
    ViewBag.Title = "Index";
}


<h3 class="titulo">Lsita de Cartões de Crédito</h3>


<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-lg-right mb-3" href="@Url.Action("Cadastro")"><i class="fa fa-plus"></i> Novo Cartão de Crédito</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Número</th>
            <th>Data Vencimento</th>
            <th>Cvv</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.CartaoCredito cartaoCredito in ViewBag.CartoesCredito)
        {
            <tr>
                <td>@cartaoCredito.Id</td>
                <td>@cartaoCredito.Numero</td>
                <td>@cartaoCredito.DataVencimento</td>
                <td>@cartaoCredito.Cvv</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = cartaoCredito.Id })" class="btn btn-outline-info"><i class="fas fa-pen"></i> Editar</a>

                    <a href="@Url.Action("Apagar", new { id = cartaoCredito.Id })" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Apagar</a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Número</th>
            <th>Data Vencimento</th>
            <th>Cvv</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>









